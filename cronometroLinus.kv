            #orientation: 'horizontal'
            #size_hint_y: None
            #height: 100
            #md_bg_color: "#735282"

        #MDBoxLayout:
            #size: 1366, 768  # largura: 1600px, altura: 900px
            #size_hint: None, None  # Desabilita o redimensionamento automático
            #md_bg_color: "#735282"  # Cor de fundo azul